<% if logged_in? %>
  <div class="row">
    <div class="col-3">
      <%= render "shared/profile" %>
      <%= render "shared/stats" %>
      <%= render "microposts/form" %>
    </div>
    <div class="col-9">
      <%= render "shared/feed" %>
    </div>
  </div>
<% else %>
  <div>
    <div class="center jumbotron">
      <h1>
        <%= t("application.welcome") %>
      </h1>
      <h2 class="btn trix-button">
        <%= t("application.description", link: link_to(t("application.title"), "http://www.railstutorial.org/")) %>
      </h2>
      <%= link_to t("button.login"), "#", class: "btn btn-lg btn-primary" %>
    </div>
  </div>
<% end %>
