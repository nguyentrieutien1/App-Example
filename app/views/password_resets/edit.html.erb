<%= form_with(model: @user, url: password_reset_path(@user.reset_digest)) do |form| %>
  <%= render partial: "shared/errors_valid", locals: { object: @user } %>
  <div class="col-4 m-auto">
    <div class="form-group">
      <label for="name"><%= t "users.form.password" %></label>
      <input type="text" name="password" id="name" class="form-control" placeholder="<%= t "form.placeholder.password" %>">
    </div>
    <div class="form-group">
      <label for="name"><%= t "users.form.password_confirmation" %></label>
      <input type="text" name="password_confirmation" id="name" class="form-control" placeholder="<%= t "form.placeholder.password_confirmation" %>">
    </div>
    <div class="">
      <button type="submit" class="btn btn-primary mt-3 float-end">
        <%= t "button.update" %></button>
    </div>
  </div>
<% end %>
