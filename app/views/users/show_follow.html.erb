<div class="row">
  <aside class="col-md-4">
    <section class="user_info"><%= gravatar_for @user %>
      <h1><%= @user.name %></h1>
      <span>
        <%= link_to t("user.view_my_profile"), @user %>
      </span>
      <span><b><%= t("micropost_list") %>:</b>
        <%= t("count", count: @user.microposts.count) %>
      </span>
      <section class="stats">
        <%= render "shared/stats" %>
        <% if @users.any? %>
          <div class="user_avatars">
            <% @users.each do |user| %>
              <%= link_to gravatar_for(user), user %>
            <% end %>
          </div>
        <% end %>
      </section>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <ul class="users follow"><%= render @users %></ul>
    <%== pagy_bootstrap_nav(@pagy) %>
  </div>
</div>
