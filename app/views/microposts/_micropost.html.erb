<li class="mb-5 d-flex m-auto" id="micropost-<%= micropost.id %>">
  <div class=""><%= link_to gravatar_for(micropost.user, size: Settings["DIGIT_140"]), micropost.user %></div>
  <div class="ms-5">
    <p class="user"><%= link_to micropost.user.name, micropost.user %></p>
    <p class="content"><%= micropost.content %></p>
    <%= image_tag micropost.image if micropost.image.attached? %>
    <p class="timestamp"><%= t "content.posted_time" %> <%= time_ago_in_words micropost.created_at %>
      ago.</p>
  </div>
  <%= button_to t("button.delete"), micropost_path(micropost), method: :delete, class: "btn btn-danger ms-3" %>
</li>
